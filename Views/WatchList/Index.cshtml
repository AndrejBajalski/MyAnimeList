@using Models.DomainModels

@model List<UnwatchedAnime>

@if (ViewBag.Message != null)
{
	@* <div class="bg-blue-100" style="">@ViewBag.Message</div> *@
	@await Html.PartialAsync("InfoBox", ViewData)
}
<form asp-controller="WatchList" class="d-flex flex-column" style="padding: 10%;">
@{
	foreach(UnwatchedAnime unwatched in Model)
	{
		<div class="row p-4">
			<div class="col-4">
				<img src="@unwatched.Anime.ImageUrlSmall" alt="@unwatched.Anime.Name"/>
			</div>
			<div class="col-8">
				<h3>@unwatched.Anime.Name</h3>
				<div><strong>Title Japanese: </strong>@unwatched.Anime.NameJapanese</div>
				<div class="d-flex justify-content-between">
					<button class="btn btn-light">Pause</button>
				    <button type="submit" class="btn btn-danger" asp-action="RemoveFromList" asp-route-id="@unwatched.Id">Remove</button>
				</div>
			</div>
		</div>
	}
}
</form>

